<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WorkTime" parent="Theme.AppCompat.NoActionBar">
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorSecondary">@color/hex</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
    </style>

    <style name="auth">
        <item name="android:background">@drawable/ic_auth</item>
    </style>

    <style name="TextViewStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/hex</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button">
        <item name="android:button">@color/hex</item>
    </style>

    <style name="BlueButton" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">@drawable/btn_enable</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:radius">5dp</item>
        <item name="android:background">@drawable/btn_dis</item>
    </style>

</resources>