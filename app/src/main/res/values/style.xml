<resources>

    <style name="AppTheme.." parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/hex</item>
        <item name="backgroundColor">#FFFFFF</item>
    </style>

    <style name="auth">
        <item name="android:background">@drawable/ic_auth</item>
    </style>

    <style name="TextViewStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/hex</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button">
        <item name="android:button">@color/hex</item>
    </style>

    <style name="BlueButton" parent="Theme.AppCompat.Dialog">
        <item name="colorButtonNormal">@drawable/btn_enable</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">5dp</item>
        <item name="android:background">@drawable/btn_dis</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

</resources>